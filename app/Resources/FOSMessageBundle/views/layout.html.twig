{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <span style="text-align: center"><h1 style="font-size: 22px; font-weight: bold">{% trans from 'FOSMessageBundle' %}messenger{% endtrans %}</h1></span>
        <div class="row">
            <div class="col-md-3">
                <ul class="list-group">
                    <li class="list-group-item"><a href="{{ url('fos_message_inbox') }}">{% trans from 'FOSMessageBundle' %}inbox{% endtrans %}</a></li>
                    <li class="list-group-item"><a href="{{ url('fos_message_sent') }}">{% trans from 'FOSMessageBundle' %}sent{% endtrans %}</a></li>
                    <li class="list-group-item"><a href="{{ url('fos_message_deleted') }}">{% trans from 'FOSMessageBundle' %}deleted{% endtrans %}</a></li>
                </ul>
            </div>
            <div class="col-md-9">
                {% block fos_message_content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}