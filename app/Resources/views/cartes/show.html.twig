{% extends 'base.html.twig' %}

{% block body %}
    <h1>Carte</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ carte.categorie }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ carte.nom }}</td>
            </tr>
            <tr>
                <th>Valeur</th>
                <td>{{ carte.valeur }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ carte.image }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{% if carte.extra %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cartes_edit', { 'id': carte.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
