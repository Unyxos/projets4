{% extends 'base.html.twig' %}

{% block body %}
    <div  class="container" style="margin-top: 30px">
        <div style="background-color: #E72F5B; width: 100%; color: white; font-weight: bold; padding-top: 10px; padding-bottom: 10px; padding-left: 15px; border-radius: 4px 4px 0px 0px; margin-top: 20px;">
            <h2>Parties en cours</h2>
        </div>
        <div class="row">
            {% for party in parties %}
                    <div class="row" style="margin-left: 15px; margin-right: 15px; padding-top : 15px; padding-bottom: 15px; border-bottom: 1px solid darkgrey; border-left: 1px solid darkgrey; border-right: 1px solid darkgrey;">
                        <div class="col-md-1 text-center">
                            <a style="color: #333" href="afficher/{{ party.id }}">{{ party.id }}</a>
                        </div>
                        <div class="col-md-4">
                            <h3 style="margin-bottom: 10px"><a style="color: #333" href="afficher/{{ party.id }}">Joueur 1 : {{ party.joueur1Id }} ({{ party.scoreJoueur1 }} point(s)) | Joueur 2 : {{ party.joueur2Id }} ({{ party.scoreJoueur2 }} point(s))</a></h3>
                        </div>
                        <div class="col-md-3 text-center">
                            <a style="color: #333" href="afficher/{{ party.id }}">Tour de :
                            {% if party.partieTourJoueurId == party.joueur1Id.id %}
                                {{ party.joueur1Id }}
                            {% else %}
                                {{ party.joueur2Id }}
                            {% endif %}
                            </a>
                        </div>
                        <div class="col-md-4 text-center">
                            <a style="color: #333" href="afficher/{{ party.id }}"></a><p>Démarrée le {{ party.dateCreation|date("d/m") }}</p>
                        </div>
                    </div>
            {% endfor %}
        </div><br />
        <div style="text-align: right">
            <a href="{{ path('app_partie_createpartie') }}" class="btn btn-info">Créer une partie !</a>
        </div>
    </div>
{% endblock %}