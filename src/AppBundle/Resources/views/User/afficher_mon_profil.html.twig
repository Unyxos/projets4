{% extends "::base.html.twig" %}

{% block title %}AppBundle:User:afficherMonProfil{% endblock %}
{% block divpage %}<div class="page-espaceMembre">{% endblock %}
{% block body %}
    <section class="content-espaceMembre">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1 col-md-6 col-sm-6 col-xs-12">
                    <div class="cercleProfil">
                        <h2>Votre profil</h2>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padd">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-padd">
                                <img src="{{ asset('images/avatars/' ~ app.user.imageName) }}" alt="" class="img-circle imgAvatar img-responsive">
                                <p class="pPseudo">{{ app.user.username }}</p>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-padd">
                                <p>{{ app.user.nom }} {{ app.user.prenom }}</p>
                                <p>{{ app.user.birthday|date('d/m/Y') }}</p>
                                <p>{{ app.user.email }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-2 col-md-6 col-sm-6 col-xs-12">
                    <div class="cercleRank">
                        <h2>Votre rang</h2>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 no-padd">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-padd">
                                <img src="img/rang.png" alt="" class="img-circle imgRang img-responsive">
                                <p class="pRang">Comis de cuisine</p>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 no-padd">
                                <p>Parties gagnées : {{ app.user.parties_gagnees }}</p>
                                <p>Parties perdues : {{ app.user.parties_perdues }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
                    <div class="cercleMessage">
                        <h2><a style="text-decoration: none; color: white" href="{{ path('fos_message_inbox') }}">Voir mes messages privés</a></h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
